<h1>Listing templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>To</th>
      <th>Cc</th>
      <th>Subject</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.name %></td>
        <td><%= template.to %></td>
        <td><%= template.cc %></td>
        <td><%= template.subject %></td>
        <td><%= truncate(strip_tags(template.body)) %></td>
        <td>
            <%= link_to 'Preview', template %> | 
            <%= link_to 'Edit', edit_template_path(template) %> | 
            <%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Template', new_template_path %>
